<style>
.hero-branded {
  position: relative;
  background: linear-gradient(120deg, #1e3c72 0%, #2a5298 100%);
  color: #fff;
  text-align: center;
  padding: 80px 20px 80px 20px;
  border-radius: 24px;
  overflow: hidden;
  margin-bottom: 40px;
}
.hero-branded__heading {
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 16px;
  letter-spacing: -1px;
}
.hero-branded__subheading {
  font-size: 1.5rem;
  margin-bottom: 32px;
  opacity: 0.9;
}
.hero-branded__cta {
  display: inline-block;
  background: #fff;
  color: #1e3c72;
  font-weight: 600;
  padding: 16px 36px;
  border-radius: 8px;
  text-decoration: none;
  font-size: 1.2rem;
  transition: background 0.2s, color 0.2s;
}
.hero-branded__cta:hover {
  background: #2a5298;
  color: #fff;
}
.hero-branded__bg {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  object-fit: cover;
  opacity: 0.18;
  z-index: 0;
}
.hero-branded__content { position: relative; z-index: 1; }
</style>
<div class="hero-branded">
  {% if section.settings.bg_image != blank %}
    <img class="hero-branded__bg" src="{{ section.settings.bg_image | img_url: '2000x' }}" alt="" loading="lazy" />
  {% endif %}
  <div class="hero-branded__content">
    <h1 class="hero-branded__heading">{{ section.settings.heading }}</h1>
    <div class="hero-branded__subheading">{{ section.settings.subheading }}</div>
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a class="hero-branded__cta" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Branded Hero",
  "settings": [
    {"type": "text", "id": "heading", "label": "Heading", "default": "Welcome to CS2Works!"},
    {"type": "text", "id": "subheading", "label": "Subheading", "default": "Premium Products. Modern Payments."},
    {"type": "image_picker", "id": "bg_image", "label": "Background Image"},
    {"type": "text", "id": "button_label", "label": "Button Label", "default": "Shop Now"},
    {"type": "url", "id": "button_link", "label": "Button Link", "default": "/collections/all"}
  ],
  "presets": [
    {"name": "Branded Hero"}
  ]
}
{% endschema %} 