    "https://cdn.shopify.com/s/files/1/0745/6482/9415/files/hedge_sapphire.jpg?v=1750008689"
  ]
};
let selectedGlove = 'pandora';
let currentImageIndex = 0;
let selectedQuantity = 1;
function updateGallery() {
  const images = urls[selectedGlove];
  const names = gloves[selectedGlove];
  document.getElementById('mainProductImage').src = images[currentImageIndex];
  document.getElementById('mainProductImage').alt = names[currentImageIndex];
  document.getElementById('galleryCaption').textContent = names[currentImageIndex];
  document.getElementById('galleryCount').textContent = (currentImageIndex+1) + ' of ' + images.length;
  // Dots
  const dots = images.map((_, idx) => `<button class='gallery-dot${idx===currentImageIndex?' active':''}' onclick='setImageIndex(${idx})'></button>`).join('');
  document.getElementById('galleryDots').innerHTML = dots;
}
function navigateImage(dir) {
  const images = urls[selectedGlove];
  if(dir==='prev') {
    currentImageIndex = (currentImageIndex-1+images.length)%images.length;
  } else {
    currentImageIndex = (currentImageIndex+1)%images.length;
  }
  updateGallery();
}
function setImageIndex(idx) {
  currentImageIndex = idx;
  updateGallery();
}
function selectGlove(glove) {
  selectedGlove = glove;
  currentImageIndex = 0;
  document.querySelectorAll('.glove-option').forEach(el=>el.classList.remove('selected'));
  document.querySelector(`.glove-option[data-glove='${glove}']`).classList.add('selected');
  updateGallery();
}
function selectQuantity(qty) {
  selectedQuantity = qty;
  document.querySelectorAll('.quantity-btn').forEach(el=>el.classList.remove('selected'));
  document.querySelector(`.quantity-btn:nth-child(${qty})`).classList.add('selected');
}
function handlePreOrder() {
  // Redirect to Shopify checkout for the product (update with actual variant ID)
  window.location.href = '/cart/add?id=YOUR_PRODUCT_VARIANT_ID&quantity='+selectedQuantity+'&return_to=/checkout';
}
function handleCryptoOrder() {
  // Redirect to crypto checkout page
  window.location.href = '/pages/crypto-payment';
}
document.addEventListener('DOMContentLoaded', updateGallery);
document.addEventListener('keydown', function(e) {
  if(e.key==='ArrowLeft') navigateImage('prev');
  if(e.key==='ArrowRight') navigateImage('next');
});
</script>
